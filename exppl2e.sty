      \fi\fi
%    \end{macrocode}
%    \begin{macrocode}
    \else
      \ifdim\@tempdima=\z@{\ybaselineshift\z@\tbaselineshift\z@#1}%
      \else\lower\@tempdima\box\z@\fi
    \fi
    \endgroup}%
  \fi
